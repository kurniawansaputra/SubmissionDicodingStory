<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DicodingStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/colorPrimary500</item>
        <item name="colorPrimaryVariant">@color/colorPrimary500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary500</item>
        <item name="colorSecondaryVariant">@color/colorPrimary500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.DicodingStory" parent="Base.Theme.DicodingStory" />

    <style name="TextView" />

    <style name="TextView.CustomFontRegular">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="TextView.CustomFontSemiBold">
        <item name="android:fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="TextView.CustomFontBold">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:fontFamily">@font/quicksand_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button" />

    <style name="Button.E9E9E9">
        <item name="android:background">@drawable/bg_rectangle_e9e9e9</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="Theme.Toolbar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>